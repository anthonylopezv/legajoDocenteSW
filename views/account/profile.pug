extends ../layout

block content
  .page-header
    h3 Datos personales

  form.form-horizontal(action='/account/profile', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='nombre') Nombres
      .col-sm-7
        input.form-control(type='text', name='nombre', id='nombre', value=user.nombre)
    .form-group
      label.col-sm-3.control-label(for='apellido') Apellidos
      .col-sm-7
        input.form-control(type='text', name='apellido', id='apellido', value=user.apellido)    
    .form-group
      label.col-sm-3.control-label(for='email') Correo
      .col-sm-7
        input.form-control(type='email', name='email', id='email', value=user.email)
    .form-group
      label.col-sm-3.control-label Genero
      .col-sm-6
        label.radio.col-sm-3
          input(type='radio', checked=user.genero=='M', name='genero', value='M', data-toggle='radio')
          span Masculino
        label.radio.col-sm-3
          input(type='radio', checked=user.genero=='F', name='genero', value='F', data-toggle='radio')
          span Femenino
    .form-group
      label.col-sm-3.control-label(for='pais') Pais
      .col-sm-7
        input.form-control(type='text', name='pais', id='pais', value=user.pais)
    .form-group
      label.col-sm-3.control-label(for='pag_web') Página web
      .col-sm-7
        input.form-control(type='text', name='pag_web', id='pag_web', value=user.pag_web)
    .form-group
      label.col-sm-3.control-label Foto
      .col-sm-4
        img(src=user.getProfilePicture(), class='profile', width='100', height='100')
    .form-group
      .col-sm-offset-3.col-sm-4
        button.btn.btn.btn-primary(type='submit')
          i.fas.fa-pencil-alt.fa-sm
          | Actualizar Datos

  .page-header
    h3 Cambiar contraseña

  form.form-horizontal(action='/account/password', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='password') Nueva contraseña
      .col-sm-7
        input.form-control(type='password', name='password', id='password')
    .form-group
      label.col-sm-3.control-label(for='confirmPassword') Confirmar contraseña
      .col-sm-7
        input.form-control(type='password', name='confirmPassword', id='confirmPassword')
    .form-group
      .col-sm-offset-3.col-sm-4
        button.btn.btn-primary(type='submit')
          i.fas.fa-lock.fa-sm
          | Cambiar contraseña

