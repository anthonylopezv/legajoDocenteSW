extends ../layout

block content
  .page-header
    h3 Información Personal

  form.form-horizontal(action='/account/profile', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='apell_pat') Apellido Paterno
      .col-sm-7
        input.form-control(type='text', name='apell_pat', pattern='[/^\s*([\pL\w\s]+)\s*,\s*([\pL\w\s-]+)\s*$/u]{4,}',title="Formato no válido",minlength="4", maxlength="20", id='apell_pat', value=user.apell_pat)
    .form-group
      label.col-sm-3.control-label(for='apell_mat') Apellido Materno
      .col-sm-7
        input.form-control(type='text', name='apell_mat', pattern='[/^\s*([\pL\w\s]+)\s*,\s*([\pL\w\s-]+)\s*$/u]{4,}',title="Formato no válido",minlength="4", maxlength="20", id='apell_mat', value=user.apell_mat)         
    .form-group
      label.col-sm-3.control-label(for='nombres') Nombres
      .col-sm-7
        input.form-control(type='text', name='nombres', pattern='[/^\s*([\pL\w\s]+)\s*,\s*([\pL\w\s-]+)\s*$/u]{3,}',title="Formato no válido",minlength="3", maxlength="30", id='nombres', value=user.nombres)
    .form-group
      label.col-sm-3.control-label Género
      .col-sm-6
        label.radio.col-sm-3
          input(type='radio', checked=user.genero=='M', name='genero', value='M', data-toggle='radio')
          span Masculino
        label.radio.col-sm-3
          input(type='radio', checked=user.genero=='F', name='genero', value='F', data-toggle='radio')
          span Femenino
    .form-group
      label.col-sm-3.control-label(for='email') Correo
      .col-sm-7
        input.form-control(type='email', name='email', id='email', value=user.email)
    .form-group
      label.col-sm-3.control-label(for='pais') Nacionalidad
      .col-sm-7
        input.form-control(type='text',list='l1' name='pais', id='pais', value=user.pais,minlength="4", maxlength="7", pattern='[Pp]er[uú]|[Mm][eé]xico|[Ee]spaña')
        datalist#l1
          option Perú
          option México
          option España
    .form-group
      label.col-sm-3.control-label(for='pais') Código institucional
      .col-sm-7
        input.form-control(type='text', name='codigo',maxlength="8", pattern='[0-9]{8}',title="Formato: solo puede ingresar 8 dígitos" id='codigo', value=user.codigo)    
    .form-group
      label.col-sm-3.control-label Tipo de Documento
      .col-sm-4
        label.radio.col-sm-2
          input(type='radio', checked=user.tipo_document=='DNI', name='tipo_document', value='DNI', data-toggle='radio')
          span DNI
        label.radio.col-sm-2
          input(type='radio', checked=user.tipo_document=='CE', name='tipo_document', value='CE', data-toggle='radio')
          span C.E
      label.col-sm-1.control-label Nro. de Documento
      .col-sm-2
        input.form-control(type='text', name='nro_document', maxlength="8", pattern='[0-9]{8}',title="Formato: solo puede ingresar 8 dígitos", id='nro_document', value=user.nro_document)
    .form-group
      label.col-sm-3.control-label(for='pag_web') Página web
      .col-sm-7
        input.form-control(type='text', name='pag_web', id='pag_web', value=user.pag_web)
    .form-group
      label.col-sm-3.control-label(for='pag_web') Teléfono
      .col-sm-7
        input.form-control(type='text', name='telefono',maxlength="8", pattern='[0-9]{7}',title="Formato: solo puede ingresar 7 dígitos", id='telefono', value=user.telefono)
    .form-group
      label.col-sm-3.control-label(for='pag_web') Celular
      .col-sm-7
        input.form-control(type='text', name='celular',maxlength="8", pattern='[0-9]{9}',title="Formato: solo puede ingresar 9 dígitos", id='celular', value=user.celular)
    .form-group
      label.col-sm-3.control-label Foto
      .col-sm-1
        a#uploadphoto.btn.btn-success 
          | Cambiar Foto
      //- input#photolink(type="hidden" name="photo" value=user.photo)  
      //- img#photoactual.img-responsive(src=user.photo, width='180', height='250')
      .col-sm-4
        //- img(src=user.getProfilePicture(), class='profile', width='100', height='100')
        input#photolink(type="hidden" name="foto" value=user.foto)
        if user.foto  
          img#photoactual.img-responsive(style='margin-left: 42px;', src=user.foto, width='180', height='250')
        else
          img#photoactual.img-responsive(style='margin-left: 42px;', src=user.getProfilePicture(), width='180', height='250')  
    .form-group
      .col-sm-offset-3.col-sm-4
        button.btn.btn.btn-primary(type='submit')
          i.fas.fa-pencil-alt.fa-sm
          | Actualizar Información Personal

  .page-header
    h3 Perfil Académico

  form.form-horizontal(action='/account/academic_profile', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='mayor_grado') Mayor grado académico del docente
      .col-sm-7
        select.form-control(name='mayor_grado', value=user.mayor_grado)
          if (user.mayor_grado)
            option(value=user.mayor_grado disabled selected) #{user.mayor_grado}
          else
            option(value='' disabled selected) Seleccione una opción  
          option(value="Bachiller") Bachiller
          option(value="Licenciado") Licenciado
          option(value="Titulado") Titulado
          option(value="Doctor") Doctor
          option(value="Ph. D.") Ph. D.  
    .form-group
      label.col-sm-3.control-label(for='menc_grado') Mención del mayor grado académico
      .col-sm-7
        input.form-control(type='text', name='menc_grado',minlength="2", maxlength="60" placeholder='Ejemplo: Ingeniería de Sistemas' id='menc_grado', value=user.menc_grado)
    .form-group
      label.col-sm-3.control-label(for='universidad') Universidad que otorgo el mayor grado
      .col-sm-7
        input.form-control(type='text', name='universidad',minlength="2", maxlength="60" id='universidad',placeholder="Ejemplo: UNMSM" value=user.universidad)
    .form-group
      label.col-sm-3.control-label(for='pais_grado') País de la universidad que otorgo el mayor grado 
      .col-sm-7
        input.form-control(type='text', name='pais_grado',minlength="2", maxlength="60" id='pais_grado',placeholder="Ejemplo: Perú" value=user.pais_grado)    
    .form-group
      label.col-sm-3.control-label(for='cv') Adjuntar Curriculum Vitae
      .col-sm-7
        input.form-control(type='text', name='cv', id='cv', value=user.cv)
    .form-group
        .col-sm-offset-3.col-sm-4
          button.btn.btn.btn-primary(type='submit')
            i.fas.fa-pencil-alt.fa-sm
            | Actualizar Perfil Académico

  .page-header
    h3 Información del Docente 

  form.form-horizontal(action='/account/teacher_information', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label Fecha de ingreso como docente
      .col-sm-2
        input.form-control(type='date', name='fech_ingreso', id='fech_ingreso', value=moment(user.fech_ingreso).add(1, 'd').format('YYYY-MM-DD'), min="1976-01-01", max="2013-12-30")             
      label.col-sm-4.control-label ¿Era docente universitario a la entrada en vigencia de la Ley 30220?
      .col-sm-3
        label.radio-inline.col-sm-1 
          input(type='radio', checked=user.sunedu_ley=='Si', name='sunedu_ley', value='Si', data-toggle='radio')
          span Si
        label.radio-inline.col-sm-1
          input(type='radio', checked=user.sunedu_ley=='No', name='sunedu_ley', value='No', data-toggle='radio')
          span No
    .form-group
      label.col-sm-3.control-label Niveles de programa de estudio en donde da clases el docente
      .col-sm-3
        label.col-sm-6.control-label Pregrado
        label.radio-inline.col-sm-1 
          input(type='radio', checked=user.pregrado=='Si', name='pregrado', value='Si', data-toggle='radio')
          span Si
        label.radio-inline.col-sm-1
          input(type='radio', checked=user.pregrado=='No', name='pregrado', value='No', data-toggle='radio')
          span No
      .col-sm-3
        label.col-sm-6.control-label Maestría
        label.radio-inline.col-sm-1 
          input(type='radio', checked=user.maestria=='Si', name='maestria', value='Si', data-toggle='radio')
          span Si
        label.radio-inline.col-sm-1
          input(type='radio', checked=user.maestria=='No', name='maestria', value='No', data-toggle='radio')
          span No 
      .col-sm-3
        label.col-sm-6.control-label Doctorado
        label.radio-inline.col-sm-1 
          input(type='radio', checked=user.doctorado=='Si', name='doctorado', value='Si', data-toggle='radio')
          span Si
        label.radio-inline.col-sm-1
          input(type='radio', checked=user.doctorado=='No', name='doctorado', value='No', data-toggle='radio')
          span No
    .form-group
      label.col-sm-3.control-label(for='categoria') Categoría del docente
      .col-sm-3
        select.form-control(name='categoria' value=user.categoria)
          if (user.categoria)
            option(value=user.categoria disabled selected) #{user.categoria}
          else
            option(value='' disabled selected) Seleccione una opción 
          option(value="Ordinario asociado") Ordinario asociado
          option(value="Ordinario principal") Ordinario principal
          option(value="Ordinario auxiliar") Ordinario auxiliar
      label.col-sm-3.control-label(for='regimen_dedicacion') Regimen de dedicación
      .col-sm-3
        select.form-control(name='regimen_dedicacion' value=user.regimen_dedicacion)
          if (user.regimen_dedicacion)
            option(value=user.regimen_dedicacion disabled selected) #{user.regimen_dedicacion}
          else
            option(value='' disabled selected) Seleccione una opción 
          option(value="Tiempo parcial") Tiempo parcial
          option(value="Tiempo completo") Tiempo completo
          option(value="Dedicacion exclusiva") Dedicacion exclusiva
    .form-group
      label.col-sm-3.control-label(for='horas_semanales') Número de horas semanales fijados por: 
      //- label.col-sm-1.control-label Clases 
      //- .col-sm-2
      //-   input.form-control(type='number', name='horas_semanales', id='horas_semanales', value=user.horas_semanales)
      //- label.col-sm-1.control-label Otras actividades 
      //- .col-sm-2
      //-   input.form-control(type='number', name='horas_semanales', id='horas_semanales', value=user.horas_semanales)
      label.col-sm-1.control-label Total
      .col-sm-2
        input.form-control(type='number', name='horas_semanales',min='1', max='20' id='horas_semanales', value=user.horas_semanales)    
    .form-group
      label.col-sm-3.control-label ¿Es docente investigador?
      .col-sm-2
        label.radio-inline.col-sm-1 
          input(type='radio', checked=user.investigador=='Si', name='investigador', value='Si', data-toggle='radio')
          span Si
        label.radio-inline.col-sm-1
          input(type='radio', checked=user.investigador=='No', name='investigador', value='No', data-toggle='radio')
          span No
      label.col-sm-3.control-label ¿Esta registrado en DINA?
      .col-sm-2
        label.radio-inline.col-sm-1 
          input(type='radio', checked=user.dina=='Si', name='dina', value='Si', data-toggle='radio')
          span Si
        label.radio-inline.col-sm-1
          input(type='radio', checked=user.dina=='No', name='dina', value='No', data-toggle='radio')
          span No    
    .form-group
      label.col-sm-3.control-label(for='per_academico') Periodo académico
      .col-sm-4
        select.form-control(name='per_academico' value=user.per_academico)
          if (user.per_academico)
            option(value=user.per_academico disabled selected) #{user.per_academico}
          else
            option(value='' disabled selected) Seleccione una opción 
          option(value="2018-I") 2018-I
          option(value="2018-0") 2018-0
          option(value="2017-II") 2017-II
    .form-group
        .col-sm-offset-3.col-sm-4
          button.btn.btn.btn-primary(type='submit')
            i.fas.fa-pencil-alt.fa-sm
            | Actualizar Información del Docente

