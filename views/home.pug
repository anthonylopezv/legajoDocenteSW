extends layout

block content
  .row(style='padding-top: 10px;')
    .col-md-2.col-md-offset-10
      a.btn.btn-primary.btn-lg(href='https://siga-fisi.herokuapp.com/dashboard', role='button') Volver a SIGA
  h1 Legajo Docente - FISI 2018
  p.lead Informacion académica de los profesores para el lincenciamiento
  if usuario 
    .container.marketing
      .row
        .col-md-4.col-md-offset-4(style='text-align: center; margin-bottom: 20px;background-color:#4d90fc;border-radius: 5px;')
          if usuario.foto
            img(style='margin-top: 25px;border-radius: 15px;', src=usuario.foto, alt='Generic placeholder image', width='220', height='290')
          else 
            img(style='margin-top: 25px;border-radius: 15px;', src=usuario.getProfilePicture(60), alt='Generic placeholder image', width='220', height='290')  
          - var nombres = usuario.nombres;
          - var primerN = nombres.split(' ')[0];
          h2(style='color: white') prof. #{primerN} #{usuario.apell_pat}
          h4 Código: 
            span #{usuario.codigo}
          p
            a.btn.btn-default.btn-lg(href='/account/'+usuario.id, role='button', style='width: 100%') Ver mi perfil
  else
    .col-xs-12.text-center
      h1 BUSCAR PROFESOR

    .row
      .col-lg-4.col-lg-offset-2
        input#search.form-control(type='search', value='', placeholder='Search using Fuzzy searching')  
      .col-lg-4
        input#search.form-control(type='search', value='', placeholder='Search using Fuzzy searching')
    

    .table-responsive
      table.table.table-striped
        thead
          tr
            th #
            th Header
            th Header
            th Header
            th Header
        tbody
          tr
            td 1,001
            td Lorem
            td ipsum
            td dolor
