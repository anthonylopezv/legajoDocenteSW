.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fas.fa-cube
        | Legajo Docente FISI
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title === 'Inicio') ? 'active' : undefined)
          a(href='/') Inicio
        //- li(class=(title === 'API Examples') ? 'active' : undefined)
        //-   a(href='/api') API Examples
        //- li(class=(title === 'Contact') ? 'active' : undefined)
        //-   a(href='/contact') Contact
        //- li
        //-   a(href='/status') Status
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title === 'Iniciar sesión') ? 'active' : undefined)
            a(href='/login') Iniciar sesión
          li(class=(title === 'Crear cuenta') ? 'active' : undefined)
            a(href='/signup') Crear cuenta
        else
          li.dropdown(class=(title === 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.getProfilePicture(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') Mi cuenta
              li.divider
              li
                a(href='/logout') Salir